{
    "name": "sagandunga-server",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "mongo": "mongod --dbpath ../data --config mongod.conf > mongod.logs",
        "server": "nodemon src/main.js",
        "load_data": "sh mongo-import-testdata.sh",
        "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
        "start": "concurrently --kill-others \"npm run mongo\" \"npm run server\""
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "concurrently": "^4.1.0",
        "node": "^11.1.0",
        "rimraf": "^2.6.3"
    },
    "dependencies": {
        "express": "^4.16.4",
        "mongoose": "^5.3.13",
        "nodemon": "^1.19.0"
    }
}
